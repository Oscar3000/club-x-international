<script>
    var move = 0;

    function prevSlides() {
        Slides(move -= 100);
    }

    function nextSlides() {
        Slides(move += 100);
    }

    function Slides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        for (i = 0; i < slides.length; i++) {
            if (n < -3900 || n > 1000) { move = 0; }
            slides[i].style.position = "relative";
            slides[i].style.left = move + "px";
        }
    }
</script>
