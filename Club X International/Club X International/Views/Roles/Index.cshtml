@using Club_X_International.Models.ViewModels;
@model ViewModels

@{
    ViewBag.Title = "Index";
    var Roles = TempData["Roles"] as IEnumerable<Club_X_International.Models.ApplicationRole>;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleViewModel.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleViewModel.Description)
        </th>
    </tr>

    @foreach (var item in Roles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
