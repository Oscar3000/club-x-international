@model Club_X_International.Models.Blog 

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="container mt-2">
        <h4 class="text-center p-4">Blog</h4>
        <hr />
        @Html.ValidationMessage("CustomError", new { @class = "text-danger" })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group mb-3">
            @*@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })*@
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @placeholder="Blog Title" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BlogPicture, htmlAttributes: new { @class = "control-label" })
                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#myModal">Click to upload pic</button>
                <!--Modal-->
                <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-dialog-centered">
                        <!--Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                <input type="file" name="PostedPicture" id="picture" />
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of Modal-->
                @Html.ValidationMessageFor(model => model.BlogPicture, "Make sure the Image is less than 4MB", new { @class = "text-danger" })
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.BlogContent, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.BlogContent, new { @class = "form-control", @cols = "40", @rows = "6", @id = "editor" })
            @Html.ValidationMessageFor(model => model.BlogContent, "", new { @class = "text-danger" })
        </div>

        @*<div class="input-group mb-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder="Enter Writer's Name"} })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>*@

        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index","Blog",new {@class= "btn btn-outline-info" })
        </div>
    </div>
}


<script>
    CKEDITOR.replace('editor');
</script>
